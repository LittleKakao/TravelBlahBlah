<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.littlekakao.travelblahblah.user.mapper.UserMapper">

    <select id="selectUserAll" resultType="User">
        SELECT *
        FROM user
    </select>

    <select id="selectUserByUserId" resultType="User">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO user (
            user_name,
            user_delete_yn
        ) VALUE (
            #{userName},
            'N'
            )
    </insert>

    <update id="updateUserByUserId" parameterType="map">
        UPDATE user
        SET user_name = #{user.userName}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUserByUserId" parameterType="int">
        DELETE
        FROM user
        WHERE user_id = #{userId}
    </delete>


</mapper>